/**
 * UserMarker
 * ----------
 */

.user-marker
  size 15px
  background $primary
  border-radius 50%
  cursor pointer

  &:before
  &:after
    content ''
    absolute 0
    border-radius 50%
    transition background 400ms
    background rgba($primary, .8)

  &:before
    spring-in-place \
      pulse 1500ms infinite, 5, 6, scale(0.95)

  &:after
    animate \
      ripple 1500ms infinite easeOutCubic, 100% scale(1.8), opacity(0)