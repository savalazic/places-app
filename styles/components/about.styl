/**
 * About
 * ----------
 */

.about
  height 100vh

  .about-text
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    z-index 100

    h1
      color $white

  .video
    absolute 0
    overflow hidden
    pointer-events none

    &::after
      content ''
      absolute 0
      background linear-gradient(rgba($white, .1), rgba(#000, .9))

    & > .col
      absolute 0

      video
        absolute top left
        size 100%
        border none
        // transform translateZ(-9999px)

        @media (min-aspect-ratio: 16/9)
          height 1000%
          top -450%

        @media (max-aspect-ratio: 16/9)
          width 1000%
          left -450%

      // remove bars
      .zoom&
        clockhand -18%
