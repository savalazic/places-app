/**
 * Place
 * ----------
 * Single place
 */

.header-map
  height 40vh

  .mapboxgl-map
    position static !important
    outline none

  .mapboxgl-canvas
    outline none
  
.place-about

  .place-heading
    @media (max-width: $mobile)
      display flex
      flex-direction column
      flex-wrap wrap

    .type
      position relative
      float right
      letter-spacing 2px
      text-transform uppercase
      font-size rem(12px)
      font-weight bold
      color $primary

      @media (max-width: $mobile)
        float none
        order 0

      &::after
        content ''
        position absolute
        right -20px
        top 2px
        size 12px
        border-radius 50%
        background $primary

        @media (max-width: $mobile)
          left 45px

      .club&
        color $club
        &::after
          background $club

      .cafe&
        color $cafe
        &::after
          background $cafe
      
      .restaurant&
        color $restaurant
        &::after
          background $restaurant

      .bar&
        color $bar
        &::after
          background $bar

    h1
      font-weight 500
      display inline-block
      vertical-align middle
      order 1

    .address
      order 2

    .rating
      display inline-block
      margin-left 30px
      vertical-align middle
      order 3

      @media (max-width: $mobile)
        margin-left 0

      .icon
        font-size rem(26px)
        margin-right 5px

      span
        background none !important
        border none !important
        transition width 500ms

  h3
    font-weight 500
    margin 50px 0 20px 0

  .contact
    box-shadow 0px 1px 2px rgba($black, 0.3)
    display inline-block
    padding 25px 30px
    position absolute
    right 0
    top -190px
    background $white

    @media (max-width: $mobile)
      right 20px

    i
      margin-right 10px
      font-size rem(18px)
      top 2px

    > *
      display block
      margin-bottom 5px

  .gallery
    .slick-center
      .gallery-image
        transform scale(1) 
        opacity 1

    .gallery-image
      background-size cover
      background-repeat no-repeat
      background-position center center
      height 400px
      transform scale(0.95)
      opacity 0.8
      transition transform 500ms, opacity 500ms

  .features
    margin-bottom 30px

    ul
      li
        position relative
        display inline-block
        padding 5px 15px 5px 30px
        margin-right 10px
        margin-bottom 10px
        box-shadow 0px 1px 2px rgba($black, 0.3)
        background rgba($black, 0.05)

        &::after
          content '\f3fd'
          font-family $icons
          position absolute
          font-size rem(25px)
          left 10px
          top -2px

