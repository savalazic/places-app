/**
 * Chart
 * ----------
 */

.chart
  .selected-card &
    margin 30px 0

.card-chart
  .card-description &
    absolute 0
    opacity .1
    transform scaleY(0.7) scaleX(1.1)
    transform-origin bottom
    z-index -1

    canvas
      height 100% !important

.chart-tooltip
  transition all 500ms
  box-shadow $shadow
  z-index 100
  padding 5px 15px
  transform translate(-50%, -120%)

  .tooltip-title
    font-size rem(20px)
    font-weight 500