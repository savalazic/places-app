/**
 * Nav
 * ----------
 */

.top-nav
  fixed top left
  background $navColor
  z-index 20
  width 100%
  box-shadow $shadow
  height $navHeight
  display flex
  justify-content space-between

  .brand
    max-width 90px
    margin 10px 20px
    padding-top 5px
    user-select none
    cursor default
    font-weight 500
    margin-right auto

    i
      margin-right 10px

  .nav-menu
    padding 20px
    transition transform 500ms

    @media (max-width: $mobile)
      absolute 55px _ _ 0
      width 250px
      height 100vh
      background rgba($white, 0.97)
      box-shadow 0 20px 40px 0 rgba($black, 0.1)
      transform translateX(-100%)

      &.is-active
        transform translateX(0%)

    .nav-item
      margin 0 10px
      display inline-block

      @media (max-width: $mobile)
        display block
        margin 10px 5px
        text-align left
        font-size rem(22px)


/**
 * Mobile hamburger button
 */
 .nav-button
   absolute top right
   height 100%
   size $navHeight
   display none

   &.is-open
     .mobile-btn
       span

         &:nth-of-type(1)
           transform rotate(45deg)

         &:nth-of-type(2)
           opacity 0

         &:nth-of-type(3)
           transform rotate(-45deg)

   .mobile-btn
     absolute 50% 50%
     transform translate(-50%, -50%)
     height 12px
     width 25px

   @media screen and (max-width: $mobile)
     display block

   span
     width 25px
     height 1px
     background $black
     absolute left
     display block
     transform-origin 15% 100%
     transition transform 500ms, opacity 500ms

     &:nth-of-type(2)
       margin-top 6px

     &:nth-of-type(3)
       margin-top 12px