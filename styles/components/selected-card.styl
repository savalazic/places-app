/**
 * SelectedCard
 * ----------
 */

.selected-card
  background $white
  min-height 100vh

  animate fadeInSelected 1000ms forwards, 0% opacity(0), 100% opacity(1)

  h3
    margin-top 30px

  .images
    position relative
    background-size cover
    background-position center center
    width 100%
    height 500px
    overflow hidden

    .image
      width 100%
      height 500px
      background-size cover
      background-position center center

    &::after
      content ''
      absolute 0
      border-top-left-radius 10px
      border-bottom-left-radius 10px
      pointer-events none

      .club&
        background rgba($club, .2)

      .bar&
        background rgba($bar, .2)

      .restaurant&
        background rgba($restaurant, .2)

      .cafe&
        background rgba($cafe, .2)

    .icon
      position absolute
      color $white
      z-index 20
      cursor pointer
      font-size rem(30px)
      outline 0

      &::after
        content ''
        position absolute
        size 40px
        box-shadow 0 0 100px 70px rgba(#000, .4)
        background rgba(#000, .4)
        z-index -1

      &.back
        left 20px
        top 10px

        &::after
          top -30px
          left -30px

      &.search
        bottom 10px
        right 20px

        &::after
          right -30px
          bottom -30px

  .description
    padding 20px 40px

    .event-time
      font-size rem(25px)
      margin-bottom 20px

    .placeName
      margin-bottom 10px
      font-size rem(30px)
      font-weight 200
      color rgba($black, .5)

    .description-text
      color rgba($black, .5)
      margin-bottom 20px

    .description-action
      color rgba($black, .7)
      display block
      
      &:first-of-type
        margin-top 10px

      &:hover
        color $black

    .description-place
      color rgba($black, .7)
      margin-top 10px


    .features
      margin 30px 0

      ul
        li
          position relative
          display inline-block
          padding 5px 15px 5px 30px
          margin-right 10px
          margin-bottom 10px
          box-shadow 0px 1px 2px rgba($black, 0.3)
          background rgba($black, 0.05)

          &::after
            content '\f3fd'
            font-family $icons
            position absolute
            font-size rem(25px)
            left 10px
            top -2px


    .heading
      position relative
      margin 20px 0 10px 0

      h2
        margin-bottom 0
        line-height 2rem

      .address
        color rgba($black, .5)
        letter-spacing 2px
        font-size rem(12px)
      
      .type
        absolute 0 15px _ _
        letter-spacing 2px
        text-transform uppercase
        font-size rem(8px)
        font-weight bold
        color $primary

        &::after
          content ''
          position absolute
          right -18px
          top 0
          size 10px
          border-radius 50%
          background $primary

        .club&
          color $club
          &::after
            background $club

        .cafe&
          color $cafe
          &::after
            background $cafe
        
        .restaurant&
          color $restaurant
          &::after
            background $restaurant

        .bar&
          color $bar
          &::after
            background $bar
