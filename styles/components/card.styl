/**
 * Card
 * ----------
 */

$cardHeight = 140px
$cardPadding = 20px

.card
  position relative
  border-radius 10px
  box-shadow $shadow
  margin 20px
  cursor pointer
  outline 0
  overflow hidden

  animate fadeIn 1000ms forwards, 0% opacity(0), 100% opacity(1)
  transition transform 200ms ease-out

  &.large
    margin 0

  &:hover
    transform scale(1.03)

  .card-image
    position relative
    width 35%
    height $cardHeight
    display inline-block
    background-size cover
    background-position center center
    border-top-left-radius 10px
    border-bottom-left-radius 10px
    filter grayscale(80%)

    .large&
      width 100%
      border-bottom-left-radius 0

    @media (max-width: $mobile)
      display none

      .large&
        display block

    &::after
      content ''
      absolute 0
      border-top-left-radius 10px
      border-bottom-left-radius 10px

      .club&
        background rgba($club, .5)

      .bar&
        background rgba($bar, .5)

      .restaurant&
        background rgba($restaurant, .5)

      .cafe&
        background rgba($cafe, .5)

  .card-description
    width 65%
    display inline-block
    padding-left 15px
    position relative
    height $cardHeight

    @media (max-width: $mobile)
      width 100%

  .card-image, .card-description
    vertical-align middle

  .card-popularity
    position absolute
    top $cardPadding - 10
    left $cardPadding
    font-size rem(32px)
    font-weight 200
    letter-spacing 2px
    color rgba($black, .5)

  .card-info
    position absolute
    bottom $cardPadding
    left $cardPadding

    .card-name
      font-size rem(22px)
      line-height 1.5rem

    .card-address
      font-size rem(10px)
      color rgba($black, .8)

  .card-type
    position absolute
    top 20px
    right 35px
    letter-spacing 2px
    text-transform uppercase
    font-size rem(8px)
    font-weight bold
    color $primary

    &::after
      content ''
      position absolute
      right -18px
      top 0px
      size 10px
      border-radius 50%
      background $primary

    .club&
      color $club
      &::after
        background $club

    .cafe&
      color $cafe
      &::after
        background $cafe
    
    .restaurant&
      color $restaurant
      &::after
        background $restaurant

    .bar&
      color $bar
      &::after
        background $bar

  .card-distance
    position absolute
    right $cardPadding
    bottom $cardPadding
    font-size rem(10px)
    color rgba($black, .5)
    