/**
 * Slider
 * ----------
 */

.slider-container
  fixed bottom right
  background $white
  width $sidebarWidth
  height 50px
  box-shadow $shadow
  padding 20px

  @media (max-width: $mobile)
    width 100%

.rc-slider
  position relative
  height 14px
  padding 5px 0
  width 100%
  border-radius 6px
  touch-action none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

  *
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

.rc-slider-rail
  position absolute
  width 100%
  background-color rgba($black, .1)
  height 4px
  border-radius 6px

.rc-slider-track
  position absolute
  left 0
  height 4px
  border-radius 6px
  background-color $primary
  transition all 100ms

.rc-slider-handle 
  position absolute
  margin-left -7px
  margin-top -5px
  width 14px
  height 14px
  cursor pointer
  cursor grab
  border-radius 50%
  border solid 2px $primary
  background-color $white
  touch-action pan-x
  transition all 100ms

  &:hover
    border-color $primary

  &:active
    cursor grabbing

  &:focus
    border-color $primary
    outline 0

.rc-slider-mark
  position absolute
  top 15px
  left 0
  width 100%
  font-size rem(10px)

.rc-slider-mark-text
  position absolute
  display inline-block
  vertical-align middle
  text-align center
  cursor pointer
  color rgba($black, .25)

.rc-slider-mark-text-active
  color rgba($black, .9)
  font-weight 500

.rc-slider-step
  position absolute
  width 100%
  height 4px
  background transparent

.rc-slider-dot
  position absolute
  bottom -2px
  margin-left -4px
  width 8px
  height 8px
  border 2px solid #e9e9e9
  background-color $white
  cursor pointer
  border-radius 50%
  vertical-align middle

  &:first-child
    margin-left -4px

  &:last-child
    margin-left -4px

.rc-slider-dot-active
  border-color $primary

.rc-slider-disabled 
  background-color #e9e9e9

  .rc-slider-track
    background-color #ccc

.rc-slider-disabled .rc-slider-handle,
.rc-slider-disabled .rc-slider-dot
  border-color #ccc
  box-shadow none
  background-color $white
  cursor not-allowed

.rc-slider-disabled .rc-slider-mark-text,
.rc-slider-disabled .rc-slider-dot
  cursor not-allowed !important

.rc-slider-vertical
  width 14px
  height 100%
  padding 0 5px

  .rc-slider-rail
    height 100%
    width 4px

  .rc-slider-track
    left 5px
    bottom 0
    width 4px

  .rc-slider-handle
    margin-left -5px
    margin-bottom -7px
    touch-action pan-y

  .rc-slider-mark
    top 0
    left 18px
    height 100%

  .rc-slider-step
    height 100%
    width 4px

  .rc-slider-dot
    left 2px
    margin-bottom -4px

  .rc-slider-dot:first-child
    margin-bottom -4px

  .rc-slider-dot:last-child
    margin-bottom -4px

  .rc-slider-handle
    background $primary

