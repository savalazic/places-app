/**
 * Grid
 * -----
 */

.container
  display flex
  flex-wrap wrap
  justify-content space-between
  margin 100px auto

  &.siteWidth
    max-width $siteWidth

  @media (max-width: $mobile)
    display block

  .col
    flex 1
    padding 20px

    &.col-4
      width 33%

    &[class*='col-']
      flex none

      @media (max-width: $mobile)
        width 100%