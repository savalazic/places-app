/**
 * Typography
 * ----------
 * Basic styles for textual elements.
 */

h1
  font-size rem(54px)
  line-height @font-size * 1.1

h2
  font-size rem(38px)
  line-height @font-size * 1.3
  margin 10px 0

h3
  font-size rem(28px)
  line-height @font-size * 1.2
  width 100%

h4
  font-size rem(20px)
  line-height @font-size * 1.4

strong
  font-weight 500

h1, h2, h3, h4, h5, h6, p, a
  color $black
